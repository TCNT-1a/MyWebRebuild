
@model MyApp.Web.Models.Account.Person
@{
    Layout = "_Layout";
    var name = Model.Name;
    var birthyear = Model.BirthYear;
    var place = Model.Place.PlaceName;
    var hobbies = Model.Hobby;
}
<h3>Form collection binding</h3>
<form asp-controller="testbinding" asp-action="formcollectionbinding" method="post" class="w-[200px] flex flex-col space-y-2">
    <input class="txt-primary" name="name" placeholder="name" />
    <input class="txt-primary" type="number" name="birthyear" placeholder="birthyear" />
    <input class="txt-primary" name="place.placename" placeholder="placename" />
    <div class="flex flex-row">
        <div><label>Du lịch</label><input type="checkbox" name="hobby.name" value="du lịch" /></div>
        <div><label>Nấu ăn</label><input type="checkbox" name="hobby.name" value="nấu ăn" /></div>
        <div><label>Mua sắm</label><input type="checkbox" name="hobby.name" value="mua sắm" /></div>
    </div>
    <button class="btn-primary" type="submit">Submit</button>
</form>
<div>
    <h2>@name</h2>
    <h2>@place</h2>
    <h2>@birthyear</h2>
    <ul>
        @{
            foreach (var hobby in hobbies)
            {
                <li>@hobby.Name</li>
            }
        }

    </ul>
</div>
